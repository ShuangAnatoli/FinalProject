<% } %>

  <main role="main" class="mt-5 pt-3">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2 ms-3">Dashboard</h1>
          
        </div>
       <% if(role=="user"){ %>
          <div>
            <canvas id="myChart"></canvas>
          </div>
       <% } %>
       <% if(role=="admin"){ %>

        <div class="row ms-2 me-2">
          <div class="col-sm-6">
            <div class="card mb-2">
              <div class="card-body">
                <h5 class="card-title">Total Default Items</h5>
                <p class="card-text numberStat"><%=numDI%></p>
                <a href="/manageDefaultItems" class="btn btn-secondary">Manage</a>
              </div>
            </div>
          </div>
          <div class="col-sm-6">
            <div class="card">
              <div class="card-body">
                <h5 class="card-titlet">Total Post Categories</h5>
                <p class="card-text numberStat"><%=numCat%></p>
                <a href="/manageCategory" class="btn btn-secondary">Manage</a>
              </div>
            </div>
          </div>
        </div> 
        
        <div class="row ms-2 me-2">
          <div class="col-sm-6">
            <div class="card mb-2">
              <div class="card-body">
                <h5 class="card-title">Total Achievements</h5>
                <p class="card-text numberStat"><%=numAchi%></p>
                <a href="/viewAchievements" class="btn btn-secondary">Manage</a>
              </div>
            </div>
          </div>
          <div class="col-sm-6">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">Total Users</h5>
                <p class="card-text numberStat"><%=numUsers%></p>
                <a href="/userManagement" class="btn btn-secondary">Manage</a>
              </div>
            </div>
          </div>
        </div>
        
        <div class="card ms-3 mb-3 me-3">
          <h5 class="card-header">Total Posts</h5>
          <div class="card-body">
            <h5 class="card-title">Number of Posts</h5>
            <p class="card-text numberStat"><%=numPosts%></p>
            <a href="/managePosts" class="btn btn-secondary">Manage</a>
          </div>
        </div>
       <% } %>

      </main>
    </div>
  </div>
