      <div class="col-lg-6 signin-area">
        <div class="sigin-form">
          <h3 class="sigin-header text-center mt-5">Admin Login</h3>
          <div class="card reg-sign">
              <div class="card-body">
                <form action="/login" method="POST">

                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="text" class="form-control" name="email" id="email" placeholder="Email" required autocomplete="off">
                      </div>

                    <div class="form-group">
                      <label for="password">Password</label>
                      <input type="password" class="form-control" id="password" name="password" required>
                    </div>

                    <input type="hidden" name="role" value="admin">

                    <button type="submit" class="btn btn-primary mt-2">Sign in</button>
                  </form>
              </div>
          </div>

        </div>
